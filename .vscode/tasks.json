{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "dependsOn": [
                "Build Hangfire.Mongo",
                "Build Hangfire.Mongo.Sample.NETCore",
                "Build Hangfire.Mongo.Sample.ASPNetCore",
                "Build Hangfire.Mongo.Tests"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Hangfire.Mongo",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/src/Hangfire.Mongo/Hangfire.Mongo.csproj"
            ],
            "osx": {
                "args": [
                    "-f",
                    "netstandard1.5"
                ]
            },
            "linux": {
                "args": [
                    "-f",
                    "netstandard1.5"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Hangfire.Mongo.Sample.NETCore",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/src/Hangfire.Mongo.Sample.NETCore/Hangfire.Mongo.Sample.NETCore.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Hangfire.Mongo.Sample.ASPNetCore",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/src/Hangfire.Mongo.Sample.ASPNetCore/Hangfire.Mongo.Sample.ASPNetCore.csproj"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Build Hangfire.Mongo.Tests",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceRoot}/src/Hangfire.Mongo.Tests/Hangfire.Mongo.Tests.csproj"
            ],
            "osx": {
                "args": [
                    "-f",
                    "netcoreapp2.0"
                ]
            },
            "linux": {
                "args": [
                    "-f",
                    "netcoreapp2.0"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Unit Test Hangfire.Mongo.Tests",
            "command": "dotnet",
            "args": [
                "test",
                "--filter",
                "Category!=DataGeneration",
                "${workspaceRoot}/src/Hangfire.Mongo.Tests/Hangfire.Mongo.Tests.csproj"
            ],
            "osx": {
                "args": [
                    "-f",
                    "netcoreapp2.0"
                ]
            },
            "linux": {
                "args": [
                    "-f",
                    "netcoreapp2.0"
                ]
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ]
        }
    ]
}